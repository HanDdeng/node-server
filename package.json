    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "rollup": "^4.24.4",
    "rollup-plugin-clear": "^2.0.7",
